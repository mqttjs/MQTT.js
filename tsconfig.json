{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"skipLibCheck": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ESNext",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"outDir": "./build",
		"baseUrl": "./",
		"incremental": true,
		"preserveSymlinks": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"node",
		],
	},
	"include": [
		"src",
		"test",
		"example.ts"
	],
	"exclude": [
		"dist",
		"test/browser"
	]
}